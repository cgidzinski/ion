<script>
var total = [<%= mTotal %>]/12500000;
var free = [<%= mFree %>]/12500000;
var used = total - free;
var percent = (used/total)*100;
var whole = percent.toPrecision(2);

var c=document.getElementById("myCanvas");

var ctx=c.getContext("2d");

ctx.beginPath();
ctx.lineWidth="6";
ctx.strokeStyle="white";
ctx.fillStyle = "white";
ctx.fillRect(0 ,25 ,55,total);
ctx.stroke(); 

ctx.beginPath();
ctx.lineWidth="6";
ctx.strokeStyle="green";
ctx.fillStyle = "green";
ctx.fillRect(0,total-used+25,55,used);
ctx.stroke(); 

ctx.beginPath();
ctx.textAlign="center";
ctx.font = "10px Arial";
ctx.fillStyle = "WHITE";
ctx.fillText("MEMORY",27.5,22);
ctx.font = "20px Arial";
ctx.fillStyle = "BLACK";
ctx.fillText(whole + '%',27.5,44);
</script>

